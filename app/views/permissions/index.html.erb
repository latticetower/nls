<h1>Разрешения</h1>
<%= render :partial => "index_top", :locals => {:current_user => current_user} %>
<table>
  <tr>
  <th class="first">Название(англ. символы)</th>
  <th>Описание</th>
  <th></th>
  <th></th>
  </tr>

<% @permissions.each do |permission| %>
  <tr class="bordered">
    <td><%= h permission.name %></td>
	<td><%= h permission.description %></td>

    <td><% link_to(edit_permission_path(permission)) do %>
	<%= image_tag("wrench.png", :alt => "Редактировать") %>
        <% end %>
		</td>
    <td>
    <% link_to(permission, :confirm => 'Are you sure?', :method => :delete) do %>
	     <%= image_tag("cross.png", :alt => "Удалить") %>
        <% end %>
	</td>
	
  </tr>
<% end %>
</table>


